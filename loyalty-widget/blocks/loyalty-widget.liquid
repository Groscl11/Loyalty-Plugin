<script>
(function() {
  const API_URL = 'https://lizgppzyyljqbmzdytia.supabase.co/functions/v1';
  const widgetButton = document.getElementById('rewardhub-widget-button');
  const widgetPanel = document.getElementById('rewardhub-widget-panel');
  const closeBtn = document.getElementById('rewardhub-close-btn');
  const tabs = document.querySelectorAll('.rewardhub-tab');
  const tabPanes = document.querySelectorAll('.tab-pane');

  let customerEmail = null;
  let customerData = null;

  // Get customer email from Shopify
  {% if customer %}
    customerEmail = '{{ customer.email }}';
  {% endif %}

  // Toggle widget panel
  if (widgetButton) {
    widgetButton.addEventListener('click', function() {
      const isVisible = widgetPanel.style.display !== 'none';
      widgetPanel.style.display = isVisible ? 'none' : 'block';

      if (!isVisible && customerEmail) {
        loadCustomerData();
      } else if (!isVisible && !customerEmail) {
        showLoginPrompt();
      }
    });
  }

  // Close widget
  if (closeBtn) {
    closeBtn.addEventListener('click', function() {
      widgetPanel.style.display = 'none';
    });
  }

  // Tab switching
  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const tabName = this.dataset.tab;

      tabs.forEach(t => t.classList.remove('active'));
      tabPanes.forEach(p => p.classList.remove('active'));

      this.classList.add('active');
      document.getElementById('rewardhub-tab-' + tabName).classList.add('active');
    });
  });

  // Show login prompt
  function showLoginPrompt() {
    document.getElementById('rewardhub-loading').style.display = 'none';
    document.getElementById('rewardhub-login-prompt').style.display = 'block';
    document.getElementById('rewardhub-content').style.display = 'none';
  }

  // Load customer data
  async function loadCustomerData() {
    document.getElementById('rewardhub-loading').style.display = 'block';
    document.getElementById('rewardhub-login-prompt').style.display = 'none';
    document.getElementById('rewardhub-content').style.display = 'none';

    try {
      const shopDomain = '{{ shop.domain }}';
      const response = await fetch(`${API_URL}/get-loyalty-status`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImxpemdwcHp5eWxqcWJtemR5dGlhIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQ0MDE0MDYsImV4cCI6MjA3OTk3NzQwNn0.E5yJHY4mjOvLiqZCfCp9vnNC7xsRAlBSdW55YE2RPC0'
        },
        body: JSON.stringify({
          customer_email: customerEmail,
          shop_domain: shopDomain
        })
      });

      if (!response.ok) throw new Error('Failed to load loyalty data');

      customerData = await response.json();

      displayCustomerData();
    } catch (error) {
      console.error('Error loading loyalty data:', error);
      document.getElementById('rewardhub-loading').innerHTML = '<p style="color: #EF4444;">Failed to load rewards data. Please try again.</p>';
    }
  }

  // Display customer data
  function displayCustomerData() {
    document.getElementById('rewardhub-loading').style.display = 'none';
    document.getElementById('rewardhub-content').style.display = 'flex';

    // Update points balance
    const points = customerData.points_balance || 0;
    document.getElementById('rewardhub-points-value').textContent = points.toLocaleString();

    // Update tier progress
    const tier = customerData.tier || { name: 'Member' };
    const lifetimeEarned = customerData.lifetime_points_earned || 0;
    const nextTierThreshold = tier.next_tier_threshold || 1000;
    const progress = Math.min((lifetimeEarned / nextTierThreshold) * 100, 100);

    document.getElementById('rewardhub-current-tier').textContent = tier.name;
    document.getElementById('rewardhub-tier-progress').style.width = progress + '%';

    // Load transactions
    loadTransactions();

    // Load available rewards
    loadRewards();
  }

  // Load transactions
  function loadTransactions() {
    const container = document.getElementById('rewardhub-transactions');
    const transactions = customerData.recent_transactions || [];

    if (transactions.length === 0) {
      container.innerHTML = '<p class="empty-state">No transactions yet. Start earning points!</p>';
      return;
    }

    container.innerHTML = transactions.map(txn => `
      <div class="transaction-item">
        <div class="transaction-info">
          <h5>${txn.description || txn.transaction_type}</h5>
          <p>${new Date(txn.created_at).toLocaleDateString()}</p>
        </div>
        <div class="transaction-points ${txn.points_change >= 0 ? 'earned' : 'redeemed'}">
          ${txn.points_change >= 0 ? '+' : ''}${txn.points_change}
        </div>
      </div>
    `).join('');
  }

  // Load rewards
  async function loadRewards() {
    const container = document.getElementById('rewardhub-rewards');

    try {
      const shopDomain = '{{ shop.domain }}';
      const response = await fetch(`${API_URL}/get-customer-rewards`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          customer_email: customerEmail,
          shop_domain: shopDomain
        })
      });

      if (!response.ok) throw new Error('Failed to load rewards');

      const data = await response.json();
      const rewards = data.rewards || [];
      const customerPoints = customerData.points_balance || 0;

      if (rewards.length === 0) {
        // Show sample rewards if none available
        container.innerHTML = `
          <div class="reward-item">
            <div class="reward-header">
              <div class="reward-info">
                <h5>$5 Off Coupon</h5>
                <p>Save $5 on your next purchase</p>
              </div>
              <div class="reward-cost">500 pts</div>
            </div>
            <button class="reward-btn" ${customerPoints < 500 ? 'disabled' : ''}>
              ${customerPoints >= 500 ? 'Redeem Now' : 'Not Enough Points'}
            </button>
          </div>
          <div class="reward-item">
            <div class="reward-header">
              <div class="reward-info">
                <h5>$10 Off Coupon</h5>
                <p>Save $10 on orders over $50</p>
              </div>
              <div class="reward-cost">1000 pts</div>
            </div>
            <button class="reward-btn" ${customerPoints < 1000 ? 'disabled' : ''}>
              ${customerPoints >= 1000 ? 'Redeem Now' : 'Not Enough Points'}
            </button>
          </div>
          <div class="reward-item">
            <div class="reward-header">
              <div class="reward-info">
                <h5>Free Shipping</h5>
                <p>Get free shipping on your next order</p>
              </div>
              <div class="reward-cost">750 pts</div>
            </div>
            <button class="reward-btn" ${customerPoints < 750 ? 'disabled' : ''}>
              ${customerPoints >= 750 ? 'Redeem Now' : 'Not Enough Points'}
            </button>
          </div>
        `;
        return;
      }

      container.innerHTML = rewards.map(reward => {
        const pointsCost = reward.value_amount || 500;
        const canRedeem = customerPoints >= pointsCost;
        return `
          <div class="reward-item">
            <div class="reward-header">
              <div class="reward-info">
                <h5>${reward.name}</h5>
                <p>${reward.description || ''}</p>
              </div>
              <div class="reward-cost">${pointsCost} pts</div>
            </div>
            <button class="reward-btn" ${!canRedeem ? 'disabled' : ''} onclick="redeemReward('${reward.id}', ${pointsCost})">
              ${canRedeem ? 'Redeem Now' : 'Not Enough Points'}
            </button>
          </div>
        `;
      }).join('');
    } catch (error) {
      console.error('Error loading rewards:', error);
      container.innerHTML = '<p class="empty-state" style="color: #EF4444;">Failed to load rewards</p>';
    }
  }

  // Redeem reward
  window.redeemReward = async function(rewardId, pointsCost) {
    if (!confirm(`Redeem this reward for ${pointsCost} points?`)) return;

    try {
      const shopDomain = '{{ shop.domain }}';
      const response = await fetch(`${API_URL}/redeem-loyalty-points`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email: customerEmail,
          shop: shopDomain,
          reward_id: rewardId,
          points: pointsCost
        })
      });

      if (!response.ok) throw new Error('Redemption failed');

      const result = await response.json();

      alert('Reward redeemed successfully! ' + (result.discount_code ? `Use code: ${result.discount_code}` : ''));
      loadCustomerData(); // Refresh data
    } catch (error) {
      console.error('Error redeeming reward:', error);
      alert('Failed to redeem reward. Please try again.');
    }
  };

  // Auto-load if customer is logged in
  {% if customer %}
    // Widget is ready
  {% endif %}
})();
</script>

